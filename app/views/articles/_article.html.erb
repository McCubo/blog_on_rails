<%= div_for article do %>
  <h3>
    <%= link_to article.title, article %>
    <% if article.owned_by? current_user %>
    	<span class='actions'>
      		<%= link_to "Edit", edit_article_path(article) %>
      		<%= link_to "Delete", article, method: :delete, data: { confirm: "You Sure?", class: "link"} %>
    	</span>
    <% end %>
  </h3>
  <%= simple_format article.body %>
<% end %>
